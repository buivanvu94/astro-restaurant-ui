---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import ProductForm from '@/components/islands/ProductForm';

export const prerender = false;
---

<DashboardLayout title="New Product - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Create New Product</h1>
      <p class="mt-2 text-base text-amber-200/70">Add a new product to your catalog</p>
    </div>

    <ProductForm client:load />
  </div>
</DashboardLayout>
