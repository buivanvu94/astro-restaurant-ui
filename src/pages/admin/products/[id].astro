---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import ProductForm from '@/components/islands/ProductForm';

export const prerender = false;

const { id } = Astro.params;
---

<DashboardLayout title="Edit Product - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Edit Product</h1>
      <p class="mt-2 text-base text-amber-200/70">Update product information and pricing</p>
    </div>

    <ProductForm client:load productId={parseInt(id!)} />
  </div>
</DashboardLayout>
