---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import ProductTable from '@/components/islands/ProductTable';

export const prerender = false;
---

<DashboardLayout title="Products - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Products</h1>
      <p class="mt-2 text-base text-amber-200/70">Manage your products and inventory</p>
    </div>

    <ProductTable client:load />
  </div>
</DashboardLayout>
