---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import PostForm from '@/components/islands/PostForm';

export const prerender = false;
---

<DashboardLayout title="New Post - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Create New Post</h1>
      <p class="mt-2 text-base text-amber-200/70">Write and publish a new blog post</p>
    </div>

    <PostForm client:load />
  </div>
</DashboardLayout>
