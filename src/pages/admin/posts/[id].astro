---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import PostForm from '@/components/islands/PostForm';

export const prerender = false;

const { id } = Astro.params;
---

<DashboardLayout title="Edit Post - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Edit Post</h1>
      <p class="mt-2 text-base text-amber-200/70">Update post content and settings</p>
    </div>

    <PostForm client:load postId={parseInt(id!)} />
  </div>
</DashboardLayout>
