---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import PostTable from '@/components/islands/PostTable';

export const prerender = false;
---

<DashboardLayout title="Posts - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Posts</h1>
      <p class="mt-2 text-base text-amber-200/70">Manage your blog posts and articles</p>
    </div>

    <PostTable client:load />
  </div>
</DashboardLayout>
