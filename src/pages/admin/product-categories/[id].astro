---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import ProductCategoryForm from '@/components/islands/ProductCategoryForm';

export const prerender = false;

const { id } = Astro.params;
---

<DashboardLayout title="Edit Product Category - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Edit Product Category</h1>
      <p class="mt-2 text-base text-amber-200/70">Update product category content and settings</p>
    </div>

    <ProductCategoryForm client:load categoryId={parseInt(id!)} />
  </div>
</DashboardLayout>
