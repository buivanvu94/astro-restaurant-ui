---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import ReservationTable from '@/components/islands/ReservationTable';

export const prerender = false;
---

<DashboardLayout title="Reservations - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Reservations</h1>
