---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import UserForm from '@/components/islands/UserForm';

export const prerender = false;

const { id } = Astro.params;
---

<DashboardLayout title="Edit User - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Edit User</h1>
      <p class="mt-2 text-base text-amber-200/70">Update user information and permissions</p>
    </div>

    <UserForm client:load userId={parseInt(id!)} />
  </div>
</DashboardLayout>
