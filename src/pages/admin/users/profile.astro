---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import ProfileForm from '@/components/islands/ProfileForm';

export const prerender = false;
---

<DashboardLayout title="My Profile - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">
        My Profile
      </h1>
      <p class="mt-2 text-base text-amber-200/70">
        Update your account information and change your password
      </p>
    </div>

    <ProfileForm client:load />
  </div>
</DashboardLayout>
