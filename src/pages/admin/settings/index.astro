---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import SettingsForm from '@/components/islands/SettingsForm';

export const prerender = false;
---

<DashboardLayout title="Settings - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Settings</h1>
      <p class="mt-2 text-base text-amber-200/70">Configure your website settings</p>
    </div>

    <SettingsForm client:load />
  </div>
</DashboardLayout>
