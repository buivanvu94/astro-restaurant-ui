---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import CategoryTree from '@/components/islands/CategoryTree';

export const prerender = false;
---

<DashboardLayout title="Categories - CMS Admin">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold bg-gradient-to-r from-amber-100 via-yellow-300 to-amber-200 bg-clip-text text-transparent">Categories</h1>
      <p class="mt-2 text-base text-amber-200/70">Manage category taxonomy, hierarchy, and structure</p>
    </div>

    <CategoryTree client:load />
  </div>
</DashboardLayout>
