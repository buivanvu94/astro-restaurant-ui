---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Test CSS">
  <div class="container mx-auto p-8">
    <h1 class="text-4xl font-bold text-blue-600 mb-4">Test Tailwind CSS</h1>
    
    <div class="bg-white p-6 rounded-lg shadow-lg mb-4">
      <h2 class="text-2xl font-semibold text-gray-800 mb-2">Card Component</h2>
      <p class="text-gray-600">This is a test card with Tailwind CSS styling.</p>
    </div>

    <div class="grid grid-cols-3 gap-4 mb-4">
      <div class="bg-red-500 text-white p-4 rounded">Red</div>
      <div class="bg-green-500 text-white p-4 rounded">Green</div>
      <div class="bg-blue-500 text-white p-4 rounded">Blue</div>
    </div>

    <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      Test Button
    </button>
  </div>
</BaseLayout>
