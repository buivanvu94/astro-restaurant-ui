---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title?: string;
}

const { title = 'Đăng nhập - CMS Admin' } = Astro.props;
---

<BaseLayout title={title}>
  <!-- Background with gradient and pattern -->
  <div class="min-h-screen relative overflow-hidden bg-gradient-to-br from-gray-900 via-slate-900 to-black">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
      <!-- Gold orbs -->
      <div class="absolute top-1/4 -left-20 w-96 h-96 bg-amber-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-yellow-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-amber-600/10 rounded-full blur-3xl"></div>
      
      <!-- Grid pattern -->
      <div class="absolute inset-0 bg-[linear-gradient(rgba(251,191,36,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(251,191,36,0.03)_1px,transparent_1px)] bg-[size:50px_50px]"></div>
    </div>

    <!-- Content -->
    <div class="relative min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl w-full grid lg:grid-cols-2 gap-8 items-center">
        
        <!-- Left side - Branding -->
        <div class="hidden lg:block space-y-8 text-center lg:text-left">
          <!-- Logo with gold effect -->
          <div class="space-y-4">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl glass-gold">
              <svg class="w-12 h-12 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
              </svg>
            </div>
            <h1 class="text-6xl font-bold text-gradient-gold animate-shine bg-[length:200%_auto]">
              CMS Admin
            </h1>
            <p class="text-xl text-amber-200/80 font-light">
              Content Management System
            </p>
          </div>

          <!-- Features -->
          <div class="space-y-4 mt-12">
            <div class="flex items-start gap-4 glass-gold rounded-2xl p-6 hover:bg-amber-500/10 transition-all duration-300">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-amber-400 to-yellow-600 flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div class="text-left">
                <h3 class="text-lg font-semibold text-amber-100">Hiệu suất cao</h3>
                <p class="text-sm text-gray-400">Quản lý nội dung nhanh chóng và mượt mà</p>
              </div>
            </div>

            <div class="flex items-start gap-4 glass-gold rounded-2xl p-6 hover:bg-amber-500/10 transition-all duration-300">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-amber-400 to-yellow-600 flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
              <div class="text-left">
                <h3 class="text-lg font-semibold text-amber-100">Bảo mật tối đa</h3>
                <p class="text-sm text-gray-400">Dữ liệu được mã hóa và bảo vệ an toàn</p>
              </div>
            </div>

            <div class="flex items-start gap-4 glass-gold rounded-2xl p-6 hover:bg-amber-500/10 transition-all duration-300">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-amber-400 to-yellow-600 flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                </svg>
              </div>
              <div class="text-left">
                <h3 class="text-lg font-semibold text-amber-100">Dễ sử dụng</h3>
                <p class="text-sm text-gray-400">Giao diện trực quan, thân thiện người dùng</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right side - Login Form -->
        <div class="w-full max-w-md mx-auto lg:mx-0">
          <!-- Mobile logo -->
          <div class="lg:hidden text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl glass-gold mb-4">
              <svg class="w-10 h-10 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
              </svg>
            </div>
            <h1 class="text-4xl font-bold text-gradient-gold animate-shine bg-[length:200%_auto]">
              CMS Admin
            </h1>
            <p class="text-sm text-amber-200/80 mt-2">Content Management System</p>
          </div>

          <!-- Login card -->
          <div class="glass-gold rounded-3xl p-8 shadow-2xl shadow-amber-500/10 border-2 border-amber-400/20">
            <!-- Gold accent line -->
            <div class="h-1 w-20 bg-gradient-to-r from-amber-400 via-yellow-500 to-amber-400 rounded-full mb-8 mx-auto"></div>
            
            <slot />

            <!-- Decorative elements -->
            <div class="mt-8 pt-6 border-t border-amber-400/10">
              <p class="text-center text-sm text-gray-500">
                © 2024 CMS Admin. All rights reserved.
              </p>
            </div>
          </div>

          <!-- Additional info -->
          <div class="mt-6 text-center">
            <p class="text-sm text-gray-500">
              Cần hỗ trợ? 
              <a href="#" class="text-amber-400 hover:text-amber-300 transition-colors font-medium">
                Liên hệ chúng tôi
              </a>
            </p>
          </div>
        </div>

      </div>
    </div>

    <!-- Bottom decoration -->
    <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-amber-500/50 to-transparent"></div>
  </div>
</BaseLayout>
