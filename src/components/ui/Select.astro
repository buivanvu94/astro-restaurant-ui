---
export interface SelectOption {
  value: string | number;
  label: string;
  disabled?: boolean;
}

export interface Props {
  name?: string;
  id?: string;
  value?: string | number;
  options: SelectOption[];
  disabled?: boolean;
  required?: boolean;
  error?: string;
  label?: string;
  placeholder?: string;
  helpText?: string;
  class?: string;
}

const {
  name,
  id,
  value,
  options,
  disabled = false,
  required = false,
  error,
  label,
  placeholder,
  helpText,
  class: className = '',
} = Astro.props;

const selectId = id || name;
const hasError = !!error;

const baseClasses = 'block w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-0 transition-colors disabled:bg-gray-100 disabled:cursor-not-allowed';
const normalClasses = 'border-gray-300 focus:border-blue-500 focus:ring-blue-500';
const errorClasses = 'border-red-500 focus:border-red-500 focus:ring-red-500';

const selectClasses = `${baseClasses} ${hasError ? errorClasses : normalClasses} ${className}`;
---

<div class="w-full">
  {label && (
    <label for={selectId} class="block text-sm font-medium text-gray-700 mb-1">
      {label}
      {required && <span class="text-red-500 ml-1">*</span>}
    </label>
  )}
  
  <select
    id={selectId}
    name={name}
    disabled={disabled}
    required={required}
    class={selectClasses}
  >
    {placeholder && (
      <option value="" disabled selected={!value}>
        {placeholder}
      </option>
    )}
    {options.map((option) => (
      <option
        value={option.value}
        disabled={option.disabled}
        selected={value === option.value}
      >
        {option.label}
      </option>
    ))}
  </select>
  
  {helpText && !error && (
    <p class="mt-1 text-sm text-gray-500">{helpText}</p>
  )}
  
  {error && (
    <p class="mt-1 text-sm text-red-600">{error}</p>
  )}
</div>
